.signup
  = form_for @user do |user|
    = user.label :full_name, "Full Name"
    = user.text_field :full_name
    = user.label :email, "Email Address"
    = user.text_field :email
    = user.label :phone, "Phone Number (optional)"
    = user.text_field :phone
    = user.label :password, "Password"
    = user.password_field :password
    = user.label :password_confirmation, "Password Confirmation"
    = user.password_field :password_confirmation
    = user.submit "Create Account"
